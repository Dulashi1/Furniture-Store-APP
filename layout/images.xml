<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Content FrameLayout -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageView91"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="?attr/actionModeCloseDrawable" />

            <!-- Additional Photos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- First Additional Photo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView83"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/download"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_width="214dp"
                        android:layout_height="wrap_content"
                        android:text="@string/rs_80000"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Second Additional Photo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView84"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/download"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_width="168dp"
                        android:layout_height="wrap_content"
                        android:text="@string/rs_750000"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView85"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/download"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="@string/rs_90000"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <!-- Add more ImageView and TextView pairs here if needed -->

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>



</FrameLayout>
