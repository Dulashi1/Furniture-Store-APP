<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:foregroundGravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/ImageView61"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="400dp"
            android:layout_height="352dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/download__4_"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:foregroundGravity="center"
            android:text="@string/rs_150000"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="422dp"
            android:layout_height="wrap_content"
            android:text="@string/experience_ultimate_comfort_and_support_with_our_ergonomic_design"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="394dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="@string/color"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:srcCompat="@drawable/ellipse_1"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:foregroundGravity="center_vertical"
            app:srcCompat="@drawable/ellipse_3"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_gravity="left"
            android:backgroundTint="#EADB57"
            android:text="@string/add_to_cart"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>
</LinearLayout>